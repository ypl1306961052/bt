<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/book_write_item_picture"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:background="@color/black"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:text="最新网友创作的章节"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/book_write_item_picture"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/book_write_item_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="时报大波点八点哦啊别逗我不耽误阿布都爱玩不动爱我不DAU我不懂啊呜不打无欧德宝哇哦摆大巴我都把"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/book_write_item_picture" />
    <TextView
        android:id="@+id/book_write_item_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:text="查看"
        android:layout_below="@+id/book_write_item_detail"
        android:layout_toEndOf="@+id/book_write_item_picture"
        android:layout_marginTop="18dp" />
</RelativeLayout>