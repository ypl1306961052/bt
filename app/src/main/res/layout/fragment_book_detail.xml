<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunyou.icloudinn.bookhouse.Activity.BookDetailActivity">

    <include
        android:id="@+id/top"
        layout="@layout/top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@+id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/book_detail_image"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <TextView
                    android:id="@+id/book_detail_author1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:textSize="12sp"
                    android:text="作者：" />

                <TextView
                    android:id="@+id/book_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/book_detail_author1"
                    android:layout_alignBottom="@+id/book_detail_author1"
                    android:layout_toEndOf="@+id/book_detail_author1"
                    android:textSize="12sp"
                    android:text="卡。李俊宇" />

                <TextView
                    android:id="@+id/book_detail_publishing_company1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/book_detail_author1"
                    android:layout_below="@+id/book_detail_author1"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="出版社：" />

                <TextView
                    android:id="@+id/book_detail_publishing_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/book_detail_publishing_company1"
                    android:layout_alignBottom="@+id/book_detail_publishing_company1"
                    android:layout_toEndOf="@+id/book_detail_publishing_company1"
                    android:textSize="12sp"
                    android:text="人民出版社" />

                <TextView
                    android:id="@+id/book_detail_publishing_tiem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/book_detail_publishing_company1"
                    android:layout_below="@+id/book_detail_publishing_company1"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="出版时间：" />

                <TextView
                    android:id="@+id/book_detail_publishing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/book_detail_publishing_tiem1"
                    android:layout_alignBottom="@+id/book_detail_publishing_tiem1"
                    android:layout_toEndOf="@+id/book_detail_publishing_tiem1"
                    android:textSize="12sp"
                    android:text="1994-10-20" />

                <TextView
                    android:id="@+id/book_detail_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/book_detail_publishing_tiem1"
                    android:layout_below="@+id/book_detail_publishing_tiem1"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="价格：" />

                <TextView
                    android:id="@+id/book_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/book_detail_publishing_tiem1"
                    android:layout_marginTop="5dp"
                    android:layout_toStartOf="@+id/book_detail_publishing_time"
                    android:textSize="12sp"
                    android:text="98元" />

                <TextView
                    android:id="@+id/book_detail_place1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/book_detail_publishing_tiem1"
                    android:layout_below="@+id/book_detail_price"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="目前所在地：" />

                <TextView
                    android:id="@+id/book_detail_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/book_detail_price"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/book_detail_place1"
                    android:textSize="12sp"
                    android:text="琼中县西河路" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/boder_book_detail"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="出租次数" />

                    <TextView
                        android:id="@+id/book_detail_rent_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="0" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/book_detail_rent_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/red"
                            android:text="0.88" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="元/天" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/points_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/book_detail_place1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/rentuser" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:text="每次节约都会赠送积分哦，积满积分就可以兑换特色名宿啦"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rend_user_layout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/points_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="借阅者：" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/read_user_list"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/rent_user_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="+"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/rent_user_more1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="更多" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/grey1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/book_detail_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="详细介绍" />

                        <ImageView
                            android:id="@+id/book_detil_information_picture"
                            android:layout_width="60dp"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/green1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book_comment_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="书评" />

                        <ImageView
                            android:id="@+id/book_detil_comment_picture"
                            android:layout_width="60dp"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/green1"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            </FrameLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/book_detail_fever"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/collect_layout"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/book_detail_collect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/book_uncollect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="收藏" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recommend_layout"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/write_comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="评论此书" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/borrow_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="带它旅行"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>