<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    >
    <include layout="@layout/top"/>
    <RelativeLayout
        android:id="@+id/attention_to_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/attention_to_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:background="@color/pink2" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:background="@drawable/attention"
            />
        <TextView
            android:id="@+id/attention_to_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/attention_to_picture"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/attention_to_picture"
            android:text="我的关注"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/attention_to_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/attention_to_name"
            android:layout_below="@+id/attention_to_name"
            android:layout_marginTop="5dp"
            android:text="共关注0位友人" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/to_attention_layout"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:background="@color/green1"
            android:id="@+id/to_attention_picture" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:background="@drawable/attention"
            />
        <TextView
            android:id="@+id/to_attention_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注我的"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/to_attention_picture"
            android:layout_toEndOf="@+id/to_attention_picture"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/to_attention_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共0人关注我"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/to_attention_name"
            android:layout_alignStart="@+id/to_attention_name" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无消息，去找找有趣的小伙伴吧！"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/green1"
        android:layout_marginTop="100dp"
        />
</LinearLayout>