<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
         />
    <com.zhy.autolayout.AutoRelativeLayout

        android:id="@+id/men_layout"
        android:layout_width="300px"
        android:layout_height="150px"
        android:layout_marginBottom="40px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/splash_men"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:layout_marginEnd="20px"
            android:layout_alignTop="@+id/splash_right"
            android:layout_toStartOf="@+id/splash_right" />

        <ImageView
            android:id="@+id/splash_right"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="30px"
            android:background="@drawable/right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/female_layout"
        android:layout_width="300px"
        android:layout_height="150px"
        android:layout_marginBottom="40px"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/splash_left"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/splash_female"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_toRightOf="@+id/splash_left"
            android:layout_marginLeft="20px"
            android:layout_alignParentBottom="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
