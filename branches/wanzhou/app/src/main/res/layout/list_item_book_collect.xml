<?xml version="1.0" encoding="utf-8"?>
<com.yunyou.icloudinn.bookhouse.Ui.SlidingButtonView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/book_delete"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/layout_content"
            android:text="删 除"
            android:background="@drawable/btn_click_red_havebackground"
            android:textColor="#DDFFFFFF"
            />
        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            >
            <ImageView
                android:id="@+id/item_book_collect_picture"
                android:layout_width="90dp"
                android:layout_height="120dp" />
            <TextView
                android:id="@+id/item_book_collect_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈利波特"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/item_book_collect_picture"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/item_book_collect_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:上架"
                android:textColor="@color/green1"
                android:layout_below="@+id/item_book_collect_name"
                android:layout_toEndOf="@+id/item_book_collect_picture"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/item_book_collect_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读数量：28"
                android:layout_below="@+id/item_book_collect_status"
                android:layout_toEndOf="@+id/item_book_collect_picture"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>

    </RelativeLayout>


</com.yunyou.icloudinn.bookhouse.Ui.SlidingButtonView>