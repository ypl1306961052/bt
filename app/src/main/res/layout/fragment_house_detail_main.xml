<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include android:id="@+id/top" layout="@layout/top"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/Look_house_all"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="全景看房"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

   <com.zhy.autolayout.AutoRelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <com.yunyou.icloudinn.bookhouse.Ui.SimpleImageBanner
           android:id="@+id/sib_the_most_comlex_usage"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           banner:bb_scale="0.5625"
           xmlns:banner="http://schemas.android.com/apk/res-auto"
           xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true">
       </com.yunyou.icloudinn.bookhouse.Ui.SimpleImageBanner>

       <ImageView
           android:layout_width="60dp"
           android:layout_height="30dp"
           android:layout_marginTop="120dp"
           android:background="@drawable/background_white"
           android:id="@+id/imageView" />
       <TextView
           android:id="@+id/house_detail_money"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="￥700"
           android:textColor="@color/black"
           android:textSize="12dp"
           android:layout_alignTop="@+id/imageView"
           android:layout_alignParentStart="true"
           android:layout_marginStart="13dp"
           android:layout_marginTop="7dp" />

   </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/house_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="民宿名称：我们的xxxx民宿"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房源描述："
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        />
        <com.tencent.smtt.sdk.WebView
            android:id="@+id/house_detail_webview"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        </com.tencent.smtt.sdk.WebView>
        <TextView
            android:id="@+id/webview_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green1"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="查看全部"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配套设施"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="10dp"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
            <ImageView
                android:id="@+id/assort_image1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"

                />
                <TextView
                    android:id="@+id/assort_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调"
                    android:layout_below="@+id/assort_image1"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/assort_image2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"

                    />
                <TextView
                    android:id="@+id/assort_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调"
                    android:layout_below="@+id/assort_image2"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/assort_image3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"

                    />
                <TextView
                    android:id="@+id/assort_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调"
                    android:layout_below="@+id/assort_image3"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/assort_image4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"

                    />
                <TextView
                    android:id="@+id/assort_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调"
                    android:layout_below="@+id/assort_image4"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/more_facility"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"
               />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="更多"
                    />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/detail_map_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/detil_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/location"
                android:layout_below="@+id/detil_adress" />

            <TextView
                android:id="@+id/detil_adress_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击跳转到第三方地图"
                android:textSize="12sp"
                android:layout_alignBottom="@+id/location"
                android:layout_toEndOf="@+id/location" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.amap.api.maps.TextureMapView
            android:id="@+id/house_detail_map"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            >

        </com.amap.api.maps.TextureMapView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />
            <TextView
                android:id="@+id/house_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="房源描述"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/house_describe_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="房源类型"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/house_describe_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="整套出租,单间出租"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/house_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="房源数"
                android:textSize="12sp"
                android:layout_below="@+id/house_describe_type"
                />
            <TextView
                android:id="@+id/house_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="4"
                android:textSize="12sp"
                android:layout_below="@+id/house_describe_type1"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/house_toilet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="卫生间"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_below="@+id/house_number"
                />
            <TextView
                android:id="@+id/house_toilet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:text="2"
                android:textSize="12sp"
                android:layout_below="@+id/house_number1"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:id="@+id/house_canbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/house_toilet"
                android:text="可住人数"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/house_canbook1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="10"
                android:textSize="12sp"
                android:layout_below="@+id/house_toilet1"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:id="@+id/house_live_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/house_canbook"
                android:layout_margin="10dp"
                android:text="入住时间"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/house_live_in1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="14:00"
                android:textSize="12sp"
                android:layout_below="@+id/house_canbook1"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:id="@+id/house_live_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/house_live_in"
                android:layout_margin="10dp"
                android:text="退房时间"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/house_live_out1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="12sp"
                android:layout_below="@+id/house_live_in"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:id="@+id/house_canbook_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/house_live_out"
                android:layout_margin="10dp"
                android:text="可租日期"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/house_canbook_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="查看"
                android:textColor="@color/green1"
                android:textSize="12sp"
                android:layout_below="@+id/house_live_out1"
                android:layout_alignParentEnd="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="退订政策"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

        <TextView
            android:id="@+id/unsubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="1.提前40天可退全款"
            />
        <TextView
            android:id="@+id/unsubscribe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="2.提前两周可退50%"
            />
        <TextView
            android:id="@+id/unsubscribe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="3.两周之内不能退款"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2条评论"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <include android:id="@+id/comment_layout" layout="@layout/list_item_comment"/>

        <TextView
            android:id="@+id/commecnt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:text="查看更多评论"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相类房源"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            >
        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/service_ohone"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="联系客服"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18976332761"
                android:textColor="@color/green"
                android:textSize="14sp" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/huose_detail_button_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/book_one_house"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey2"
                android:text="单间预定"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
            <Button
                android:id="@+id/book_whole_house"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green1"
                android:text="整套预定"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/one_room_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/huose_detail_button_layout"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择房型"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/close_book_one_room"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_close"
            android:layout_alignParentRight="true"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/one_room_list"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            >

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


</RelativeLayout>