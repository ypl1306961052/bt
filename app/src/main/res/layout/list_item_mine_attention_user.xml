<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/attention_user_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    >
<ImageView
    android:id="@+id/item_attention_user_picutre"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignParentStart="true"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="10dp"
     />
    <TextView
        android:id="@+id/item_attention_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王君相"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/item_attention_user_picutre"
        android:layout_marginStart="10dp"
         />
    <TextView
        android:id="@+id/item_attention_user_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="租0本"
        android:textSize="12sp"
        android:layout_below="@+id/item_attention_user_name"
        android:layout_toEndOf="@+id/item_attention_user_picutre"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/item_attention_user_donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="捐0本"
        android:textSize="12sp"
        android:layout_below="@+id/item_attention_user_rent"
        android:layout_toEndOf="@+id/item_attention_user_picutre"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/item_attention_user_live_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="住进0家民宿"
        android:textSize="12sp"
        android:layout_below="@+id/item_attention_user_donate"
        android:layout_toEndOf="@+id/item_attention_user_picutre"
        android:layout_marginStart="10dp" />

</RelativeLayout>