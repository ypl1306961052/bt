<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/house_list_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <TextView
        android:id="@+id/house_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名宿名称"
        android:textColor="@color/black"
        android:layout_below="@+id/house_list_picture"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/house_list_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名宿名称"
        android:textColor="@color/black"
        android:layout_below="@+id/house_list_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/house_list_fever"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/un_collect"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="30dp"

        android:background="@drawable/background_white"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/house_list_fever"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/house_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥790"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />
</RelativeLayout>