<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/item_book_information_picture"
    android:layout_width="80dp"
    android:layout_height="100dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />
  <RelativeLayout
      android:id="@+id/item_book_information_picture2"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_alignParentTop="true"
      android:background="@color/pink"
      android:layout_toStartOf="@+id/item_book_information_name">
      <TextView
          android:id="@+id/item_book_information_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="捐"
          android:textColor="@color/white"
          android:layout_centerInParent="true"
          android:textSize="10sp"
           />
  </RelativeLayout>

    <TextView
        android:id="@+id/item_book_information_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="永夜"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/item_book_information_picture" />
    <TextView
        android:id="@+id/item_book_information_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0人租过"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/item_book_information_name"
        android:layout_alignStart="@+id/item_book_information_name" />

    <TextView
        android:id="@+id/item_book_information_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0条评论"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/item_book_information_rent"
        android:layout_alignStart="@+id/item_book_information_name" />
    <TextView
        android:id="@+id/item_book_information_isRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可租"
        android:textColor="@color/green1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/item_book_information_comment"
        android:layout_alignStart="@+id/item_book_information_name" />
</RelativeLayout>