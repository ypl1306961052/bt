    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/green"></ImageView>
    <TextView
        android:id="@+id/textView_left"
