<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="10dp"
    >
<ImageView
    android:id="@+id/item_donate_picture"
    android:layout_width="80dp"
    android:layout_height="110dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/item_donate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还好"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/item_donate_picture"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/item_donate_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态：已审核"
        android:layout_below="@+id/item_donate_name"
        android:layout_alignStart="@+id/item_donate_name"
        android:textSize="10sp"
        android:textColor="@color/green1"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/item_donate_can_borrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可借"
        android:visibility="invisible"
        android:layout_below="@+id/item_donate_status"
        android:layout_alignStart="@+id/item_donate_name"
        android:textColor="@color/green1"
        android:textSize="10sp"
         />
    <TextView
        android:id="@+id/item_donate_number_borrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90人租过"
        android:textSize="10sp"
        android:layout_below="@+id/item_donate_can_borrow"
        android:layout_alignStart="@+id/item_donate_can_borrow"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/item_donate_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已返积分"
        android:textSize="10sp"
        android:layout_below="@+id/item_donate_number_borrow"
        android:layout_alignStart="@+id/item_donate_number_borrow" />
    <TextView
        android:id="@+id/item_donate_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="书籍原价：50元"
        android:textSize="10sp"
        android:visibility="gone"
        android:layout_below="@+id/item_donate_point"
        android:layout_alignStart="@+id/item_donate_number_borrow" />
    <TextView
        android:id="@+id/item_donate_tiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="捐书时间：2017-6-17"
        android:textSize="10sp"
        android:layout_below="@+id/item_donate_price"
        android:layout_alignStart="@+id/item_donate_number_borrow" />
</RelativeLayout>